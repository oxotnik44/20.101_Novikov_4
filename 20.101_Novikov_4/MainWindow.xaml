<Window x:Class="_20._101_Novikov_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20._101_Novikov_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="LoadData" Grid.Row="2" Margin="2,5,10,10" 
          ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto"
          AutoGenerateColumns="False" Grid.Column="1" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="IdGroup" Binding="{Binding IdGroup}" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn Header="CourseNumber" Binding="{Binding CourseNumber}" />
                <DataGridTextColumn Header="IdSpeciality" Binding="{Binding IdSpeciality}" />
                
            </DataGrid.Columns>
        </DataGrid>
        <Button Height="NaN" Margin="319,372,319,10" Width="NaN" Click="Button_Click">Поиск</Button>
    </Grid>
</Window>
